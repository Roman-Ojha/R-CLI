{
  "name": "r-cli",
  "version": "0.1.0",
  "private": true,
  "main": "./src/electron/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "tsc && concurrently \"cross-env BROWSER=none yarn dev\" \"yarn electron\" \"tsc -w\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "tsc && yarn build:for:electron && yarn electron:builder",
    "electron:build": "vue-cli-service electron:build",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* ./dist_electron",
    "electron:serve": "yarn copy:assets && vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "core-js": "^3.8.3",
    "vue": "^3.2.13",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-e2e-cypress": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "autoprefixer": "^10.4.11",
    "babel-jest": "^27.0.6",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.7.0",
    "electron": "^19.0.10",
    "electron-devtools-installer": "^3.1.0",
    "electron-reloader": "^1.2.3",
    "electron-window-state": "^5.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "jest": "^27.0.5",
    "postcss": "^8.4.16",
    "prettier": "^2.4.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^27.0.4",
    "ts-loader": "~8.2.0",
    "tsc": "^2.0.4",
    "typescript": "~4.5.5",
    "vite": "^3.1.3",
    "vue-cli-plugin-electron-builder": "~2.1.1",
    "vue-tsc": "^0.40.13",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.roman.r-cli",
    "productName": "R-CLI",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron-dist/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    }
  }
}
