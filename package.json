{
  "name": "03_electron_vue_typescript",
  "private": true,
  "version": "0.0.0",
  "author": "roman-ojha",
  "main": "electron_dist/electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "tsc && concurrently \"cross-env BROWSER=none yarn dev\" \"yarn electron\" \"tsc -w\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "tsc && yarn build:for:electron && yarn electron:builder"
  },
  "dependencies": {
    "electron-devtools-installer": "^3.2.0",
    "electron-reloader": "^1.2.3",
    "electron-window-state": "^5.0.3",
    "vue": "^3.2.37",
    "vue-router": "^4.1.5",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@iconify/vue": "^4.0.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "autoprefixer": "^10.4.11",
    "babel-jest": "^27.0.6",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.4",
    "electron-builder": "^23.3.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "jest": "^27.0.5",
    "postcss": "^8.4.16",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^27.0.4",
    "ts-loader": "~8.2.0",
    "tsc": "^2.0.4",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vue-tsc": "^0.40.4",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.roman.electron-vue",
    "productName": "electron-vue",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron_dist/electron/**/**"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    }
  }
}
